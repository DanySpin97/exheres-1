require github [ user="atom" pn="atom" ]

SUMMARY="A hackable text editor for the 21st Century"
DESCRIPTION="
Atom is a hackable text editor for the 21st century, built on atom-shell, and 
based on everything we love about our favorite editors. We designed it to be 
deeply customizable, but still approachable using the default configuration.
"

HOMEPAGE="http://www.atom.io/"
LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build:
	gnome-desktop/libgnome-keyring
	dev-lang/node[>=0.10][npm]
"

src_compile() {
    edo script/bootstrap
    edo script/build --build-dir "${TEMP}"
}

src_install() {
    edo script/grunt install --install-dir "${IMAGE}"
}
